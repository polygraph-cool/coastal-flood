#wind-sm
  width calc(100% - 100px)
  margin auto
  
.wind-sm__header
  margin 50px auto
  margin-bottom 80px

  &__title
    color #f2f2f4
    font-family big-caslon-fb, serif
    font-weight normal
    font-size 50px
    margin auto
    margin-bottom 44px
    text-align center
    max-width 600px
    line-height 64px
    
  &__subhed
    font-family forma-djr-deck, sans-serif
    margin auto
    font-size 20px
    color rgba($text, 0.8)
    text-align center
    margin-top 30px
    line-height 36px
    position sticky
    top 0
    
    .dropdown
      padding 5px 10px
      padding-right 30px
      background-color $bg_80
      border-radius 3px
      margin 0 5px
      text-transform uppercase
      font-size 16px
      font-weight bold
      letter-spacing 1px

.x.axis, .y.axis
    .domain
      display none

    line
      stroke $bg_80
      stroke-opacity 0  

    text 
      fill $text
      font-size 14px
      opacity 0.5
      font-weight normal
      font-family forma-djr-deck, sans-serif
      letter-spacing 0.5px
      
.y.axis line
  stroke-opacity 0.1
  stroke white
  stroke-dasharray 3

.bar
  fill #e36f22
  
.bar-text
  font-family $sans
  fill $text
  font-size 14px

.wind-sm, .tidal-sm  
  
  .whisker-bottom, .whisker-top, .whisker-bar
    stroke #ffc87b
    stroke-width 2

  .whisker-bar
    stroke-width 2
    stroke-dasharray 2

  .line
    stroke #e36f22
    stroke-width 3
    fill none
    
  .chart-bg
    fill $bg_80
    opacity 0
    border-radius 5px
    
  .fill
    fill #e36f22
    opacity 0.5
    
  .sm-title
    fill $text
    font-family forma-djr-deck, sans-serif
    font-size 16px
    letter-spacing 0.5px
    font-weight bold
    opacity 0.7
    
  .value
    fill $text
    font-family forma-djr-deck, sans-serif
    font-size 14px
    letter-spacing 0.5px
    
#wind-main
  max-width 1200px
  margin auto
  padding 0 25px
  display flex
  align-items flex-start
  align-content flex-start

  &__chart
    flex 1
    position sticky
    top 0
    margin-right 80px
    height 100vh
    
    &__svg
      position absolute
      top 50%
      width 100%
      transform translateY(-50%)
      
      svg
        overflow visible
    
    .line
      stroke #e36f22
      stroke-width 3
      fill none
      
    .fill
      fill #e36f22
      opacity 0.5
      
  .box-label-text
    font-family forma-djr-deck sans-serif
    fill $text
    
  &__text
    width 350px
    padding 40vh 0
    
    p
      font-size 20px
      font-family $serif
      color $text
      margin 200px 0
