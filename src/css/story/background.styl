.background
  width 100vw
  min-height 100vh
  background-color $bg_100
  border-top 1px solid $bg_40
  padding 150px 15px 0 15px
  
  &__text
    font-family $serif
    color $text
    max-width 500px
    font-size 20px
    margin auto
    margin-bottom 28px
    
    &:first-child::first-letter
      float left
      font-size 60px
      line-height 60px
      margin-right 10px
      font-family $sans
      font-weight $bold
      
.chart-wrap--background
  max-width 1200px
  margin auto
  margin-bottom 50px
  margin-top 65px
  width 100%

.chart-title
  font-family $sans
  fill $text
  font-weight bold
  font-size 22px