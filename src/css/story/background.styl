.background
  width 100vw
  min-height 100vh
  background-color $bg_100
  border-top 1px solid $bg_40
  padding-top 150px
  
  &__text
    font-family $serif
    color $text
    max-width 500px
    font-size 20px
    margin auto
    margin-bottom 28px
    
    &:first-child::first-letter
      float left
      font-size 60px
      line-height 60px
      margin-right 10px
      font-family $sans
      font-weight $bold