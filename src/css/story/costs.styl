.costs
  position relative
  top -80vh
  
  .costs-title
    font-family forma-djr-deck, sans-serif
    font-size 32px
    font-weight bold
    fill white

  .costs-subhed
    font-family forma-djr-deck, sans-serif
    font-size 18px
    fill white
    opacity 0.7

  .costs-intro
    margin-top 100px
  
  #costs-svg-wrap
    position absolute
    top 100px
    bottom 40px
    left 50px
    right 100px
    
    svg
      overflow visible
      
      .min-value, .max-value
        font-family forma-djr-deck
        fill $text
        alignment-baseline middle
        stroke #0d0d11
        paint-order stroke
        stroke-width 5
        
        tspan
          alignment-baseline middle
          
          &.value-label
            fill #7f7f82
            font-size 12px
        
      .min-value
        text-anchor end
        
      .max-value
        text-anchor start
      
      .costs-hover-rect
        cursor crosshair

      .county-label
        font-family forma-djr-deck, sans-serif
        fill $text
        font-size 16px
        font-weight bold
        letter-spacing 0.5px
        alignment-baseline middle
        
      .x.axis line
        stroke $text
        stroke-opacity 0.3
        stroke-dasharray 3
        
@media (max-width: 650px)
  .costs
    top 0
    
    .split-text
      padding-top 100vh !important
      padding-bottom 90vh !important
      
      .text
        background-color rgba(white, 0.9)
        color black !important
        padding 10px !important
        border-radius 6px
        margin-bottom 70vh !important
    
   #costs-svg-wrap
    position absolute
    top 60px !important
    bottom 40px !important
    left 75px !important
    right 10px !important