.tidal-flood
  background-color $bg_100
  padding-bottom 100px
  
  p
    color $text
    
.tidal-intro
  padding 100px 5px
  margin-top -50vh

.tidal-header
  position relative
  
  .tidal-video-wrap
    position sticky
    top 0

  .tidal-video-wrap:after
    position absolute
    content ''
    position absolute
    left 0
    top 0
    height 100%
    width 100%
    background-color #000000
    opacity 0.7

.tidal-title 
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  
  h2, h4
    color white
    font-family $sans
    text-align center
    text-shadow 0 0 20px #000000
    margin 0
    font-weight 800
    
  h2
    font-size 90px
    
  h4
    text-transform uppercase
    letter-spacing 2px
    
.tidal-main
  display flex
  flex-direction row

  &__text
    width 450px
    padding 40vh 50px
    z-index 999
    
    .text--right
      margin 150px 0
    
  &__graphic
    flex 1
    height 100vh
    position sticky
    top 0  
    
    canvas
      position relative
    
    img
      height 100%
      width auto
      position absolute
      left 50%
      transform translateX(-50%)
    
    svg
      position absolute
      top 0
      left 0
      
      .county-label
        font-family $sans
        font-size 14px
    
.tidal-step
  transition opacity 0.4s ease
  

#tidal-values
  max-height 620px
  overflow hidden
  position relative
  
  &:after
    content ''
    position absolute
    bottom 0
    width 100%
    height 100px
    background: linear-gradient(0deg, rgba(0,0,0,1) 18%, rgba(14,13,18,0.5) 67%, rgba(14,13,18,0) 100%);