.tidal-flood
  background-color $bg_100
  
  p
    color $text
    
.tidal-intro
  padding 100px 5px

.tidal-header
  position relative
  
  .tidal-video-wrap
    position sticky
    top 0

  .tidal-video-wrap:after
    position absolute
    content ''
    position absolute
    left 0
    top 0
    height 100%
    width 100%
    background-color #000000
    opacity 0.7

.tidal-title 
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  
  h2, h4
    color white
    font-family $sans
    text-align center
    text-shadow 0 0 20px #000000
    margin 0
    font-weight 800
    
  h2
    font-size 90px
    
  h4
    text-transform uppercase
    letter-spacing 2px
    
.tidal-main
  display flex
  flex-direction row

  &__text
    width 450px
    padding 0 50px
    
    .text--right
      margin 150px 0
    
  &__graphic
    flex 1
    height 100vh
    position sticky
    top 0  